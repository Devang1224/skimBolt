{
  "manifest_version": 3,
  "name": "SkimBolt",
  "version": "0.1.1",
  
  "description": "skimBolt is a chrome extension that allows you to summarize any text on a webpage. ",

  "action": {
    "default_title": "SkimBolt"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "cookies",
    "webNavigation"
  ],
  "host_permissions": [
     "http://localhost:3000/*",
     "https://localhost:3000/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "externally_connectable":{
     "matches": [
       "http://localhost:3000/*",
       "https://localhost:3000/*"
      ] 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames":false,
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ]
}
